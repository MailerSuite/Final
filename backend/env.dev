# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# MailerSuite2 - Development Settings (VPS)
# ============================================================================

# ============================================================================
# BASIC SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=True
IS_PRODUCTION=False
TESTING=True

# ============================================================================
# DATABASE CONFIGURATION - DEVELOPMENT
# ============================================================================
# Use local SQLite for frictionless development
DATABASE_URL=sqlite+aiosqlite:///./dev.db
# Provide sync URL for Alembic and CLI tools
SYNC_DATABASE_URL=sqlite:///./dev.db

# Database optimization for development
DB_AUTO_MIGRATE=True
DB_AUTO_OPTIMIZE=False

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8001  # Different port for development

# Optional: override CORS in dev using CORS_ORIGINS (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# REDIS AND CACHING
# ============================================================================
REDIS_URL=redis://localhost:6379/0  # Shared with production

# ============================================================================
# SECURITY AND AUTHENTICATION
# ============================================================================
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours for development
REFRESH_TOKEN_EXPIRE_DAYS=30

# Security settings (relaxed for development)
MAX_LOGIN_ATTEMPTS=10
LOGIN_BLOCK_DURATION=60
SESSION_TIMEOUT=86400

# Rate limiting (relaxed for development)
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000
RATE_LIMIT_PER_DAY=100000

# ============================================================================
# FEATURES
# ============================================================================
ENABLE_BULK_MAIL=True
ENABLE_METRICS=True
SMTP_SELECTION_ENABLED=True

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
ENABLE_DEBUG_ENDPOINTS=True
ENABLE_SWAGGER_UI=True
ENABLE_RELOAD=True
