# ========================================
# üîß SAMPLE ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.local for local development
# Copy to .env.production for production deployment
# ========================================

# ========================================
# üåê APPLICATION CONFIGURATION
# ========================================
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/database_name
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mailersuite2_dev
DATABASE_USER=mailersuite
DATABASE_PASSWORD=your-database-password-here

# ========================================
# üîê AUTHENTICATION & SECURITY
# ========================================
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_SALT_ROUNDS=12

# ========================================
# üìß EMAIL & SMTP CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_USE_TLS=True
SMTP_USE_SSL=False

# ========================================
# üåç CORS & NETWORK CONFIGURATION
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:4000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# ========================================
# üîç MONITORING & LOGGING
# ========================================
SENTRY_DSN=your-sentry-dsn-here
LOG_TO_FILE=True
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ========================================
# üöÄ PERFORMANCE & CACHING
# ========================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=300
SESSION_TTL=3600

# ========================================
# üîó EXTERNAL SERVICES
# ========================================
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_ANALYTICS_ID=your-ga-id-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here

# ========================================
# üì± FRONTEND CONFIGURATION
# ========================================
FRONTEND_URL=http://localhost:3000
FRONTEND_API_BASE=http://localhost:8000/api
FRONTEND_WS_URL=ws://localhost:8000/ws

# ========================================
# üß™ TESTING CONFIGURATION
# ========================================
TESTING=False
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_password@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/1

# ========================================
# ÔøΩÔøΩ ANALYTICS & METRICS
# ========================================
METRICS_ENABLED=True
METRICS_INTERVAL=60
PROMETHEUS_ENABLED=False
PROMETHEUS_PORT=9090

# ========================================
# üîí SECURITY FEATURES
# ========================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
FIREWALL_ENABLED=True
IP_WHITELIST=127.0.0.1,::1
