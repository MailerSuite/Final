# ========================================
# ÔøΩÔøΩ PRODUCTION ENVIRONMENT TEMPLATE
# ========================================
# Copy this file to .env.production and fill in actual values
# NEVER commit the actual .env.production file
# ========================================

# ========================================
# üåê APPLICATION CONFIGURATION
# ========================================
DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=WARNING
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql+asyncpg://prod_user:secure_password@prod_host:5432/prod_database
DATABASE_HOST=your-db-host.com
DATABASE_PORT=5432
DATABASE_NAME=mailersuite2_prod
DATABASE_USER=prod_user
DATABASE_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# ========================================
# üîê AUTHENTICATION & SECURITY
# ========================================
JWT_SECRET_KEY=CHANGE_THIS_TO_SECURE_JWT_KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_SALT_ROUNDS=14

# ========================================
# üìß EMAIL & SMTP CONFIGURATION
# ========================================
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=CHANGE_THIS_TO_SMTP_PASSWORD
SMTP_USE_TLS=True
SMTP_USE_SSL=False

# ========================================
# üåç CORS & NETWORK CONFIGURATION
# ========================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# ========================================
# üîç MONITORING & LOGGING
# ========================================
SENTRY_DSN=CHANGE_THIS_TO_SENTRY_DSN
LOG_TO_FILE=True
LOG_FILE_PATH=/var/log/mailersuite/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# ========================================
# üöÄ PERFORMANCE & CACHING
# ========================================
REDIS_URL=redis://your-redis-host:6379/0
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_THIS_TO_REDIS_PASSWORD
CACHE_TTL=600
SESSION_TTL=1800

# ========================================
# üîó EXTERNAL SERVICES
# ========================================
OPENAI_API_KEY=CHANGE_THIS_TO_OPENAI_API_KEY
GOOGLE_ANALYTICS_ID=CHANGE_THIS_TO_GA_ID
STRIPE_SECRET_KEY=CHANGE_THIS_TO_STRIPE_SECRET
STRIPE_PUBLISHABLE_KEY=CHANGE_THIS_TO_STRIPE_PUBLISHABLE

# ========================================
# üì± FRONTEND CONFIGURATION
# ========================================
FRONTEND_URL=https://yourdomain.com
FRONTEND_API_BASE=https://yourdomain.com/api
FRONTEND_WS_URL=wss://yourdomain.com/ws

# ========================================
# üîí SECURITY FEATURES
# ========================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=60
FIREWALL_ENABLED=True
IP_WHITELIST=YOUR_IP_ADDRESS_HERE

# ========================================
# üìä PRODUCTION MONITORING
# ========================================
METRICS_ENABLED=True
METRICS_INTERVAL=30
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health
LIVENESS_CHECK_ENDPOINT=/health/live
READINESS_CHECK_ENDPOINT=/health/ready
