# ========================================
# üîß FRONTEND ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.local for local development
# Copy to .env.production for production deployment
# ========================================

# ========================================
# üåê API CONFIGURATION
# ========================================
VITE_API_BASE=http://localhost:8000/api
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws

# ========================================
# üöÄ DEVELOPMENT SERVER
# ========================================
VITE_DEV_SERVER_PORT=4000
VITE_DEV_SERVER_HOST=localhost

# ========================================
# üîç DEBUGGING & DEVELOPMENT
# ========================================
VITE_DEBUG=true
VITE_LOG_LEVEL=info
VITE_SHOW_DEV_TOOLS=true

# ========================================
# üåç INTERNATIONALIZATION
# ========================================
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de

# ========================================
# üìä ANALYTICS & MONITORING
# ========================================
VITE_GOOGLE_ANALYTICS_ID=your-ga-id-here
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_MIXPANEL_TOKEN=your-mixpanel-token-here

# ========================================
# üîê AUTHENTICATION
# ========================================
VITE_AUTH_STORAGE_KEY=mailersuite_auth
VITE_SESSION_TIMEOUT=3600000
VITE_REFRESH_TOKEN_INTERVAL=300000

# ========================================
# üé® THEME & STYLING
# ========================================
VITE_DEFAULT_THEME=dark
VITE_THEME_STORAGE_KEY=mailersuite_theme
VITE_ENABLE_ANIMATIONS=true

# ========================================
# üîó EXTERNAL SERVICES
# ========================================
VITE_OPENAI_API_KEY=your-openai-api-key-here
VITE_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# ========================================
# üß™ TESTING CONFIGURATION
# ========================================
VITE_TEST_MODE=false
VITE_MOCK_API=false
VITE_TEST_USER_EMAIL=test@example.com

# ========================================
# üì± FEATURE FLAGS
# ========================================
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT_SUPPORT=true
VITE_ENABLE_TRIAL_MODE=true

# ========================================
# üöÄ PERFORMANCE OPTIMIZATION
# ========================================
VITE_ENABLE_SERVICE_WORKER=false
VITE_ENABLE_PWA=false
VITE_CACHE_STRATEGY=network-first
VITE_PRELOAD_CRITICAL_RESOURCES=true
